{
  "name": "musica",
  "productName": "Musica",
  "private": true,
  "main": "main/index.js",
  "version": "0.1.0",
  "license": "MIT",
  "author": {
    "name": "Derian Castillo",
    "url": "https://derianandre.com"
  },
  "scripts": {
    "clean": "rimraf dist renderer/.next renderer/out",
    "start": "electron .",
    "build": "next build renderer && next export renderer",
    "build:app": "npm run build && electron-builder --dir",
    "build:prod": "npm run build && electron-builder",
    "parse": "node main/utils/parser.js"
  },
  "build": {
    "appId": "com.derianandre.musica",
    "productName": "Musica",
    "copyright": "Copyright Â© year ${author.name}",
    "asar": true,
    "directory": {
      "output": "build"
    },
    "files": [
      "library",
      "main",
      "renderer/out"
    ],
    "win": {
      "target": "portable"
    }
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.27",
    "autoprefixer": "^10.4.13",
    "electron": "^23.0.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.33.0",
    "eslint-config-next": "^13.1.6",
    "music-metadata": "^7.13.3",
    "next": "^13.2.0",
    "node-dir": "^0.1.17",
    "postcss": "^8.4.21",
    "prettier-plugin-tailwindcss": "^0.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.58.0",
    "tailwindcss": "^3.2.6"
  },
  "dependencies": {
    "daisyui": "^2.50.0",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "howler": "^2.2.3",
    "react-icons": "^4.7.1",
    "react-intersection-observer": "^9.4.2",
    "usehooks-ts": "^2.9.1"
  }
}
